doctype html
head
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Viga")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat")
    link(rel="stylesheet" type="text/css" href="/css/root.css") 
    link(rel="stylesheet" type="text/css" href="/css/login.css") 
    link(rel="stylesheet" type="text/css" href="/css/home.css") 

div#info
    //- Logout button
    form(method='POST' action='/logout')
        button.button#logout logout

    //- Display user details
    ul.details
        if user
            li#name #{user.name.toLowerCase()}
            li#email #{user.email.toLowerCase()}
            li
                button#edit edit details

    //- Show the queue table/list ++ have a remove button
    div#requests
        div#requests_text your requests

        table#requests_list
            tr 
                th position
                th name
                th email
                th purpose
                th status

        //- Add more options here if needed
        div#new_request new request
            div#err
                if err
                    = err

            form(method='POST' action='/add_queue')
                input.input(type="hidden" name="source" value = user.id)
                input.input#new_email(type="email" name="destination" placeholder="destination email" required)
                br
                input.input#new_email(type="text" name="purpose" placeholder="purpose" required)
                br
                button.button#submit(type='submit') Submit
                br
                

div#orangeRect
    div#page_info homepage


script(src="/js/home.js")